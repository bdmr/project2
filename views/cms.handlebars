<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="/css/cms.css" rel="stylesheet">
<div class="container">
    <div class="card">
        <div class="card-action deep-orange lighten-2 white-text">
            <h4>Review Your Student:</h4>
        </div>
        <br>
        <div class="form-group center-align">
            <div class="row">
                <form id="student-form">
                    <div class="input-field col s8">
                        <i class="material-icons prefix">face</i>
                        <label for="student_name"></label>
                        <input class="input-field" placeholder="Enter Student Name" type="text" id="student_name">
                    </div>
            </div>
            <br>
            <div class="row">
                <div class="input-field col s8">
                    <i class="material-icons prefix">mode_edit</i>
                    <label for="comment"></label>
                    <textarea placeholder="Type your comments here" rows="10" id="comment"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label for="parent"> Select Parent: </label>
                    <select id="parent"></select>
                    <option value="" disabled selected> Choose Parent</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label for="teacher"> Select Teacher: </label>
                    <select id="teacher">
                    </select>
                </div>
            </div>
            <br />
            <div class="form-field center-align">
                <button type="submit" button class="btn-large deep-orange lighten-2 hoverable">Add Comments</button>
            </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('select').formSelect();
    });
    $('#textarea1').val('New Text');
    M.textareaAutoResize($('#textarea1'));
</script>
<script type="text/javascript" src="/js/cms.js"></script>